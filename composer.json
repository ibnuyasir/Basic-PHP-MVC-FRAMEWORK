{
    "name": "kurt/basic",
    "description": "simple_framework",
    "type": "project",
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Core\\": "src/Core/"
        }
    },
    "scripts": {
        "serve": [
            "php -S localhost:8000 -t public"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
